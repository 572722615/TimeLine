<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/time_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="13dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/show_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="2月19日"
            android:textColor="#343434"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/show_time_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/show_time"
            android:layout_centerHorizontal="true"
            android:text="2016"
            android:textColor="#9b9b9b"
            android:textSize="11dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/time_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/time_layout"
        android:layout_alignTop="@+id/relative"
        android:layout_alignBottom="@+id/relative"
        >

        <ImageView
            android:id="@+id/view_top"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/image"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="#dcc1f4"
            />


        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/cost_pay" />

        <ImageView
            android:id="@+id/view_bottom"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/image"
            android:layout_centerHorizontal="true"
            android:src="#dcc1f4"
            />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="17dp"
        android:layout_toRightOf="@id/time_line"
        android:gravity="center">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:id="@+id/record_layout"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/cost_list_item_bg"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:text="消费"
                android:textColor="#343434"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/title_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/title"
                android:text="88元"
                android:textColor="#FF4A83"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/title_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginLeft="17dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="2dp"
                android:text=""
                android:textColor="#343434"
                android:textSize="15sp" />
            <Button
                android:id="@+id/share_friend_btn"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:background="@drawable/share_friend_btn_bg"
                android:textSize="14dp"
                android:textColor="#FFF"
                android:text="分享"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:visibility="gone"
                />
        </RelativeLayout>


    </RelativeLayout>



</RelativeLayout>